{
  "name": "heroes3tools",
  "version": "2.0.0-alpha.1",
  "private": true,
  "scripts": {
    "start": "vite",
    "build": "NODE_ENV=production npm run lint && vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "test": "jest",
    "lint": "eslint --ext .ts,.vue src",
    "lint:fix": "eslint --ext .ts,.vue --fix src",
    "commit": "npx git-cz"
  },
  "dependencies": {
    "@vueform/multiselect": "^2.2.0",
    "@vueuse/core": "^6.5.3",
    "idb": "^6.1.4",
    "pinia": "*",
    "vue": "^3.2.19",
    "vue-i18n": "^9.2.0-beta.9",
    "vue-router": "^4.0.11",
    "vue-tsc": "^0.28.1",
    "workbox-build": "^6.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vitejs/plugin-vue": "^1.9.3",
    "@vue/compiler-sfc": "^3.2.20",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^2.0.0-rc.15",
    "autoprefixer": "^10.3.7",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.3.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-vue": "^7.19.1",
    "fake-indexeddb": "^3.1.3",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "postcss-load-config": "^3.1.0",
    "postcss-plugin": "^1.0.0",
    "prettier": "^2.4.1",
    "sass": "^1.42.1",
    "sass-loader": "^12.1.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "vite": "^2.6.5",
    "vite-plugin-pwa": "^0.11.3",
    "vue-cli-plugin-i18n": "^2.3.1",
    "vue-eslint-parser": "^7.11.0",
    "yorkie": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS -g ./commitlint.js"
    }
  }
}
