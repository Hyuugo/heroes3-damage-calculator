{
  "name": "heroes3tools",
  "version": "2.0.0-beta.1",
  "private": true,
  "description": "Web tools for simplify calculations in Heroes of Might and Magic III: Horn of The Abyss",
  "homepage": "https://heroes3.tools",
  "bugs": {
    "url": "https://github.com/rudnovd/heroes3tools/issues"
  },
  "repository": "github:rudnovd/heroes3tools",
  "license": "MIT",
  "scripts": {
    "start": "vite",
    "build": "cross-env NODE_ENV=production npm run lint && vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "test:open": "peeky open",
    "test": "peeky run",
    "lint": "cross-env NODE_ENV=production eslint --ext .ts,.vue src",
    "lint:fix": "cross-env NODE_ENV=production eslint --ext .ts,.vue --fix src",
    "stylelint": "stylelint '**/*{.scss,.vue}'",
    "stylelint:fix": "stylelint '**/*{.scss,.vue}' --fix",
    "commit": "npx git-cz",
    "localazy:upload": "localazy upload -k localazy.keys.json",
    "localazy:download": "localazy download -k localazy.keys.json"
  },
  "dependencies": {
    "@vueuse/core": "^8.0.0",
    "pinia": "^2.0.11",
    "vue": "^3.2.31",
    "vue-i18n": "^9.1.9",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@intlify/vite-plugin-vue-i18n": "^3.3.1",
    "@localazy/cli": "^1.6.0",
    "@peeky/test": "^0.13.5",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@vitejs/plugin-vue": "^2.2.4",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-rc.18",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-vue": "^8.5.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "sass": "^1.49.9",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-recommended-vue": "^1.3.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.1.0",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vite-plugin-pwa": "^0.11.13",
    "vue-eslint-parser": "^8.3.0",
    "vue-tsc": "^0.33.1",
    "workbox-build": "^6.5.1",
    "workbox-core": "^6.5.1",
    "workbox-precaching": "^6.5.1",
    "workbox-routing": "^6.5.1",
    "workbox-strategies": "^6.5.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=16"
  },
  "funding": {
    "type": "Ko-fi",
    "url": "https://ko-fi.com/rudnovd"
  }
}
